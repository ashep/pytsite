{% extends reg.get('output.base_tpl') %}

{% block content %}
    <div class="auth profile">
        <h1 class="text-xs-B-center text-xs-left">{{ user.full_name }}</h1>

        <div class="row">
            <div class="col-xs-B-12 col-xs-4 col-sm-3 col-lg-2 text-xs-center">
                <img class="img-responsive img-circle" src="{{ user.picture_url }}" alt="{{ user.full_name }}">
            </div>
            <div class="col-xs-B-12 col-xs-8 col-sm-9 col-lg-10">
                <ul>
                    <li>{{ t('auth_ui@member_since') }}: {{ user.created | date('pretty_date') }}</li>
                    <li>{{ t('auth_ui@activity') }}: {{ user.login_count }}</li>
                    <li>{{ t('auth_ui@last_login') }}: {{ user.last_login | date('pretty_date_time') }}</li>
                </ul>
                {% if modify_button %}
                    <div class="row">
                        <div class="col-xs-12">
                            <a href="{{ endpoint_url('pytsite.auth_ui.eps.profile_edit', {'uid': user.id|string, '__form_redirect': current_url()}) }}" class="btn btn-default">{{ t('pytsite.auth_ui@modify_profile') }}</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
